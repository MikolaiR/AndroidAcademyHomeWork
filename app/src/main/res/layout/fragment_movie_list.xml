<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UI.MovieListFragment">

    <Button
        android:id="@+id/buttonViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_44"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_combined_shape"
        android:gravity="center"
        android:text="@string/movies_list"
        android:textAppearance="@style/button_back"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMovieOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/backgraund_for_movie_list_item"
        android:padding="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewMenu">

        <ImageView
            android:id="@+id/imageViewTitleBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:foreground="@drawable/ic_blackout_picture"
            android:scaleType="fitXY"
            android:src="@drawable/image_move_title"
            app:layout_constraintBottom_toTopOf="@+id/textViewNameMove"
            app:layout_constraintDimensionRatio="1:1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:src="@drawable/ic_like"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAgeLimit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewAgeLimit" />

        <TextView
            android:id="@+id/textViewAgeLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_8"
            android:alpha="0.9"
            android:background="@drawable/ic_rectangle"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="@string/age_limit"
            android:textAppearance="@style/age_limit"
            android:textSize="@dimen/body_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewMovieGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/sp_3"
            android:text="@string/movie_genre"
            android:textAppearance="@style/movie_genre"
            android:textSize="@dimen/sp_8"
            app:layout_constraintBottom_toTopOf="@+id/imageViewStarOneIcon"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageViewStarOneIcon"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@drawable/ic_star_red_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewTitleBackground"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageViewStarTwoIcon"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@drawable/ic_star_red_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewTitleBackground"
            app:layout_constraintStart_toEndOf="@+id/imageViewStarOneIcon" />

        <ImageView
            android:id="@+id/imageViewStarThreeIcon"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@drawable/ic_star_red_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewTitleBackground"
            app:layout_constraintStart_toEndOf="@+id/imageViewStarTwoIcon" />

        <ImageView
            android:id="@+id/imageViewStarFourIcon"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@drawable/ic_star_red_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewTitleBackground"
            app:layout_constraintStart_toEndOf="@+id/imageViewStarThreeIcon" />

        <ImageView
            android:id="@+id/imageViewStarFiveIcon"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_8"
            android:src="@drawable/ic_star_white_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewTitleBackground"
            app:layout_constraintStart_toEndOf="@+id/imageViewStarFourIcon" />

        <TextView
            android:id="@+id/textViewReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:gravity="center_vertical"
            android:shadowColor="@android:color/black"
            android:text="@string/reviews"
            android:textAppearance="@style/reviews"
            android:textSize="@dimen/sp_8"
            app:layout_constraintBottom_toBottomOf="@id/imageViewStarFiveIcon"
            app:layout_constraintStart_toEndOf="@+id/imageViewStarFiveIcon"
            app:layout_constraintTop_toTopOf="@+id/imageViewStarFiveIcon" />

        <TextView
            android:id="@+id/textViewNameMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center_vertical"
            android:text="@string/name_movie_l"
            android:textAppearance="@style/title_movie_name"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewTitleBackground" />

        <TextView
            android:id="@+id/textViewFilmDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/_127_min"
            android:textColor="@color/duration_movie"
            android:textSize="@dimen/sp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewNameMove" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



