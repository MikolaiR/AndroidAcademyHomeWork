<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.androidacademyhomework.UI.MovieListFragment"
        android:label="MovieList"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/action_movieListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment">

            <argument
                android:name="movie"
                app:argType="com.example.androidacademyhomework.data.Movie" />

        </action>

    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.androidacademyhomework.UI.MovieDetailsFragment"
        android:label="MovieDetails"
        tools:layout="@layout/fragment_movie_details">

        <argument
            android:name="movie"
            app:argType="com.example.androidacademyhomework.data.Movie" />

        <action
            android:id="@+id/action_movieDetailsFragment_to_movieListFragment"
            app:popUpTo="@id/movieListFragment">
        </action>
    </fragment>

</navigation>